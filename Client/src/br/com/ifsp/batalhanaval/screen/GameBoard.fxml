            <ImageView fx:id="viewCruzador" fitHeight="32.0" fitWidth="92.0" layoutX="18.0" layoutY="441.0" onMouseClicked="#OnMouseClick" opacity="0.25" pickOnBounds="true" preserveRatio="true">
