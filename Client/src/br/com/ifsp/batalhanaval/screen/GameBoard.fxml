            <ImageView fx:id="viewPortaAviao" fitHeight="35.0" fitWidth="162.0" layoutX="17.0" layoutY="395.0" onMouseClicked="#OnMouseClick" opacity="0.25" pickOnBounds="true" preserveRatio="true">
