                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
            <Label text="Player" />
            <ImageView fx:id="viewEncouracado" fitHeight="33.0" fitWidth="128.0" layoutX="215.0" layoutY="396.0" onMouseClicked="#OnMouseClick" opacity="0.25" pickOnBounds="true" preserveRatio="true">
