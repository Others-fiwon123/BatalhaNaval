            <GridPane id="gridPlayer" fx:id="gridPlayer" alignment="CENTER" gridLinesVisible="true" hgap="2.0" layoutX="17.0" layoutY="45.0" prefHeight="350.0" prefWidth="350.0" vgap="2.0">
